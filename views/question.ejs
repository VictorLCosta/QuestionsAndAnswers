<%- include('partials/header.ejs') %> 
<body>
    <%- include('partials/navbar.ejs') %> 
    <div class="container">
        <div class="card" id="question-form">
            <div class="card-header text-white bg-dark">
                <h2 class="card-title" >Realize uma pergunta</h2>
            </div>
            <div class="card-body">
                <form method="POST" action="/questions/new">
                    <div class="form-group">
                        <label >Título</label>
                        <input name="title" type="text" class="form-control" placeholder="Título"/>
                    </div>
                    <div class="form-group">
                        <label>Descrição</label>
                        <textarea name="desc" class="form-control" placeholder="Descreva sua pergunta"></textarea>
                    </div>
                    <button class="btn btn-primary">Submit</button>
                </form>
            </div>
        </div>
    </div>
</body>
