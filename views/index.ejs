    <div class="container">
        <h1>Perguntas</h1>
        <hr /> 
        <a href="/questions" class="btn btn-primary">Perguntar</a>
        <hr />
        <% questions.forEach(question => { %>
            <div class="card">
                <div class="card-body">
                    <h3 class="card-title"><%= question.title %></h3> 
                </div>
                <div class="card-footer">
                    <button class="btn btn-success">Responder</button>
                </div>
            </div>
            <br />
        <% }) %>
    </div>
</body>
